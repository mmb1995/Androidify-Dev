<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.example.android.androidify.fragments.TopHistoryFragment"
        tools:layout="@layout/fragment_top_history">
        <action
            android:id="@+id/home_to_artist"
            app:destination="@+id/artist_fragment"/>

    </fragment>

    <fragment
        android:id="@+id/artist_fragment"
        android:name="com.example.android.androidify.fragments.ArtistFragment"
        tools:layout="@layout/fragment_artist">
        <argument
            android:name="artist_id"
            app:argType="string"/>

    </fragment>

</navigation>