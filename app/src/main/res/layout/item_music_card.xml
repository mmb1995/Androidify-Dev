<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/MaterialMusicCard"
    card_view:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/music_card_image_view"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:alpha="0.9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <View
            android:id="@+id/music_card_scrim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/scrimBackground"
            android:visibility="visible"
            android:alpha="1"
            app:layout_constraintTop_toBottomOf="@id/music_card_image_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            style="@style/MusicCardText.Header"
            android:id="@+id/music_card_title_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="@dimen/default_margin"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="@id/music_card_scrim"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/context_menu_button"
            app:layout_constraintBottom_toTopOf="@id/music_card_secondary_text_view"
            app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
            style="@style/MusicCardText.Secondary"
            android:id="@+id/music_card_secondary_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/music_card_title_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/context_menu_button"
            app:layout_constraintBottom_toBottomOf="@id/music_card_scrim"/>

        <ImageButton
            android:id="@+id/context_menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/default_padding"
            android:background="?android:attr/selectableItemBackground"
            app:srcCompat="@drawable/ic_context_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/music_card_scrim"
            app:layout_constraintBottom_toBottomOf="@id/music_card_scrim"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>



